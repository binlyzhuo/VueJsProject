
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index12</title>
    <script type="text/javascript" src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/vue.js"></script>
    <script type="text/javascript" src="~/Scripts/lodash.min.js"></script>
    <script type="text/javascript" src="~/Scripts/axios.min.js"></script>
    <style type="text/css">
        .static{ font-weight:bold; }
        .active{color:red;}
        .text-danger{text-decoration:underline}
    </style>
</head>
<body>
    <div id="app1"> 
        <div class="static" v-bind:class="{active:isActive,'text-danger':hasError}">COLOR</div>
    </div>
    <div id="app2">
        <div v-bind:class="classObject">APP2</div>
    </div>
    <div id="app3">
        <div v-bind:class="[activeClass, errorClass]">app3</div>
    </div>
    <div id="app4">
        <div v-bind:class="[isActive?activeClass:'',errorClass]">app4</div>
    </div>
    <script type="text/javascript">
        var v1 = new Vue({
            el: '#app1',
            data: {
                isActive: true,
                hasError: false
            }
        });

        var v2 = new Vue({
            el: '#app2',
            data: {
                classObject: {
                    active: true,
                    'text-danger': false
                }
            }
        });

        var v3 = new Vue({
            el: '#app3',
            data: {
                activeClass: 'active',
                errorClass:'text-danger'
            }
        });

        var v4 = new Vue({
            el: '#app4',
            data: {
                isActive: true,
                activeClass: 'active',
                errorClass:'text-danger'
            }
        });
    </script>
</body>
</html>
